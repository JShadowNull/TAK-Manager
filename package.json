{
  "name": "tak-manager-root",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "tak-manager-wrapper/web"
  ],
  "scripts": {
    "start:client": "npm run start --workspace=client",
    "build:client": "npm run build --workspace=client",
    "build:css": "npm run build:css --workspace=client",
    "docker:image-mac": "npm run docker:image-create-mac --workspace=client",
    "docker:dev": "npm run docker:dev --workspace=client",
    "update:version": "node version/update-version.js",
    "dev": "npm run docker:dev --workspace=client",
    "build:web": "npm run build --workspace=tak-manager-wrapper/web",
    "dev:web": "npm run dev --workspace=tak-manager-wrapper/web",
    "wrapper:dev": "npm run start:dev --workspace=tak-manager-wrapper/web",
    "wrapper:prod": "npm run start:prod --workspace=tak-manager-wrapper/web",
    "package:mac": "npm run docker:image-create-mac --workspace=client && npm run package --workspace=tak-manager-wrapper/web && create-dmg 'tak-manager-wrapper/dist/TAK Manager.app' tak-manager-wrapper/dist/"
  },
  "devDependencies": {
    "js-yaml": "^4.1.0"
  },
  "author": "Jacob Olsen",
  "description": "TAK Manager - A comprehensive TAK Server management solution"
}
