{
  "mac": {
    "identity": null,
    "icon": "build/icons/icon.icns",
    "category": "public.app-category.utilities",
    "entitlements": "./entitlements/mac.plist",
    "entitlementsInherit": "./entitlements/mac.plist",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "extendInfo": {
      "NSAppleEventsUsageDescription": "Required to launch Docker Desktop",
      "NSCameraUsageDescription": "Required for TAK functionality"
    },
    "extraResources": [
      {
        "from": "./assets/installers",
        "to": "installers",
        "filter": ["*.dmg"]
      },
      {
        "from": "..",
        "to": ".",
        "filter": [
          "docker-compose.prod.yml",
          ".env"
        ]
      },
      {
        "from": "../dist",
        "to": "dist",
        "filter": ["*.tar.gz"]
      }
    ]
  },
  "files": [
    "**/*"
  ]
} 