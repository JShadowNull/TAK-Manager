# Mode configuration
MODE=development
BUILD_TARGET=development

# Port configuration
BACKEND_PORT=8989
FRONTEND_PORT=5173

# CORS configuration
CORS_ALLOWED_ORIGINS=http://localhost:${FRONTEND_PORT},http://127.0.0.1:${FRONTEND_PORT}
CORS_ALLOW_CREDENTIALS=false
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*
CORS_EXPOSE_HEADERS=*

# Socket configuration
SOCKET_ASYNC_MODE=eventlet
SOCKET_PING_TIMEOUT=120
SOCKET_PING_INTERVAL=25
SOCKET_PATH=/socket.io
SOCKET_MAX_HTTP_BUFFER_SIZE=100000000

# Logging configuration
DEV_LOG_LEVEL=INFO
PROD_LOG_LEVEL=ERROR

# Docker configuration
DOCKER_RESTART_POLICY=unless-stopped
HEALTHCHECK_INTERVAL=30s
HEALTHCHECK_TIMEOUT=10s
HEALTHCHECK_RETRIES=3

# Debug configuration
PYTHONUNBUFFERED=1
WERKZEUG_DEBUG_PIN=off 